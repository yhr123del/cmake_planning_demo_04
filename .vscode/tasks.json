{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ with G++",
            "type": "shell",
            "command": "D:/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/planning_main.cpp",
                "${workspaceFolder}/src/process/process.cpp",
                "${workspaceFolder}/src/pnc_map/pnc_map.cpp",
                "${workspaceFolder}/src/show_result/show_result.cpp",
                "-o",
                "${workspaceFolder}/src/planning_main.exe",
                "-I",
                "${workspaceFolder}/src/process",
                "-I",
                "${workspaceFolder}/src/pnc_map",
                "-I",
                "${workspaceFolder}/src/show_result",
                "-I",
                "D:/mingw64/include",
                "-I",
                "D:/mingw64/opt/include",
                "-I",
                "D:/mingw64/x86_64-w64-mingw32/include",
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-leasyx",
                "-lgdi32",
                "-limm32",
                "-lmsimg32",
                "-lole32",
                "-loleaut32",
                "-lwinmm",
                "-luuid"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "生成c++项目文件"
        },
        {
            "label": "Build C with GCC",
            "type": "shell",
            "command": "D:/mingw64/bin/gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-I ${workspaceFolder}/src/",
                "-I D:/mingw64/include/",
                "-I D:/mingw64/opt/include/",
                "-std=c17",
                "-Wall",
                "-Wextra",
                "-Wpedantic"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "生成c项目文件"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe 生成活动文件",
            "command": "D:/mingw64/bin/gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "D:/mingw64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]
}